rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - user profiles
    match /users/{userId} {
      // Allow users to read their own profile
      // Allow unauthenticated reads for username lookups during account recovery
      allow read: if request.auth == null || isOwner(userId);
      
      // Allow users to write their own profile
      allow write: if isOwner(userId);
      
      // User's notes subcollection
      match /notes/{noteId} {
        // Only the owner can read/write their notes
        allow read, write: if isOwner(userId);
        
        // Allow creation, update, and delete
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // User's folders subcollection
      match /folders/{folderId} {
        // Only the owner can read/write their folders
        allow read, write: if isOwner(userId);
        
        // Allow creation, update, and delete
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // User's files subcollection (if you decide to sync files to Firebase in future)
      match /files/{fileId} {
        // Only the owner can read/write their files
        allow read, write: if isOwner(userId);
        
        // Allow creation, update, and delete
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }
    
    // Recovery keys collection (if stored separately)
    match /recoveryKeys/{userId} {
      // Only the owner can read/write their recovery key
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

